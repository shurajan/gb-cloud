<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.cloud.application.ui.WindowControler">
   <children>
      <HBox fx:id="authPanel" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label prefHeight="17.0" prefWidth="36.0" text="Login">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <TextField fx:id="loginField" prefHeight="25.0" prefWidth="180.0" />
            <Label text="Password">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="180.0" onAction="#sendAuthRequest"/>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="505.0">
         <children>
            <ListView fx:id="clientView" onMouseClicked="#changePath" prefHeight="200.0" prefWidth="235.0" />
            <Pane prefHeight="400.0" prefWidth="35.0">
                  <Button fx:id="buttonUpload" layoutX="2.0" layoutY="106.0" mnemonicParsing="false" onAction="#upload" text="-&gt;" />
                  <Button fx:id="buttonDownload" layoutX="2.0" layoutY="263.0" mnemonicParsing="false" onAction="#download" text="&lt;-" />
            </Pane>
            <ListView fx:id="serverView" onMouseClicked="#sendPathChangeRequest" prefHeight="200.0" prefWidth="235.0" />
         </children>
      </HBox>
   </children>
</VBox>
